extends layout_admin

block content
    div.container
        h2 #{translation.TRACKS}
        table.highlight
            thead
                tr
                    th #{translation.ID}
                    th #{translation.NAME}
                    th #{translation.DISTANCE}
                    th
            tbody
                each track in tracks
                    tr(onclick='getDetails("'+track.id+'")')
                        td= track.id
                        td= track.name
                        td #{Math.round(track.distance)}m
                        td
                            button.right.btn.waves-effect.waves-light(onclick='deleteTrack("'+track.id+'",event)') #{translation.DELETE}


