extends layout_admin

block content
    div.container
        h2 #{translation.CATEGORIES}
        table#tableCategories.highlight
            thead
                tr
                    th #{translation.NAME}
                    th.right #{translation.ACTION}

            tbody#bodyTracks
                tr
                    td.tdEditable(colspan='2')
                        form(method='post')
                            .input-field.inline
                                input#name.validate(maxlength='50', type='text', name='name', required='')
                                label(for='name') #{translation.NAME}
                            button.right.btn.waves-effect.waves-light(type='submit', name='submit') #{translation.ADD}
                                i.material-icons.left add
                    td
                each categorie in categories
                    tr
                        .categorie
                            td
                                span(id="cat"+categorie.id)= categorie.name
                            td
                                a(href="/admin/categories/remove/"+categorie.id).right.black-text
                                    i.material-icons delete
                                a(onclick="editCat('"+categorie.id+"')").right.black-text
                                    i.material-icons mode_edit