extends layout_admin

block content
    div.container
        h2 #{translation.USERDETAILS}
        div.row
            a#user-edit-off-button.waves-effect.waves-light.btn.right(onclick='lockUserEditMode()') #{translation.EDIT}
                i.material-icons.left close
            a#user-edit-on-button.waves-effect.waves-light.btn.right(onclick='unlockUserEditMode()') #{translation.EDIT}
                i.material-icons.left mode_edit
            form(method="post").col.s12
                div.row
                    div.input-field.col.s6
                        i.material-icons.prefix vpn_key
                        input#id.validate(type="text", value=user.id, disabled)
                        label(for="id") #{translation.ID}
                    div.input-field.col.s6
                        i.material-icons.prefix email
                        input#email.validate(type="email", value=user.email, disabled)
                        input(type="hidden",name="email",value=user.email)
                        label(for="email") #{translation.EMAIL}
                    div.input-field.col.s6
                        i.material-icons.prefix group
                        select#usertype.validate(disabled,name="userType")
                            if(user.typeUser == 'admin')
                                option(value=user.typeUser, selected) #{user.typeUser}
                                option(value=tracker) tracker
                            if(user.typeUser == "tracker")
                                option(value=user.typeUser, selected) #{user.typeUser}
                                option(value="admin") admin
                        label #{translation.TYPE}
                    div#newpassword-input.input-field.col.s6
                        i.material-icons.prefix lock_outline
                        input#newpassword.validate(type="password", value="",name="newpassword")
                        label(for="newpassword") #{translation.PASSWORD}
                    input(type="hidden",name="credentials", value=user.credentials)
                    input(type="hidden",name="idAuth", value=user.idAuth)
                div.row
                    button#user-edit-save-button.right.btn.waves-effect.waves-light(type="submit", name="action") Sauvegarder
                        i.material-icons.right save