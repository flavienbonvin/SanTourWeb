extends layout_admin

block content
    div.container
        h2 Settings
        form(method="post")
            table#tableSettings.highlight
                tbody
                    tr
                        td
                            label #{translation.DISTANCEMIN}
                        td
                            input#myMinNumber(name="myMinNumber",type='number', value=minimalDistance)
            input(type="submit", value=translation.SAVE).waves-effect.waves-light.btn.right