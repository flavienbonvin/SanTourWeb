extends layout

block content
    div.container.password-margin
        div.row
            div.col.s3
            div.col.s6
                h4 #{translation.RESETPASS}
            div.col.s3
        div.row
            div.col.s3
            div.col.s6
                h6 #{translation.RESETPASSMESSAGE}
            div.col.s3
        div.row
            div.col.s3
            form(method="post").col.s6
                div.input-field
                    i.material-icons.prefix lock
                    input(id="reset-pass-input", type="password", name="password")
                    label(for="reset-pass-input") #{translation.PASSWORD}
                input.btn.right(type="submit", value="OK")
            div.col.s3
        div.row
            div.col.s3
            div.center-align.language.col.s6
                a.black-text(href="?clang=en") EN
                a.black-text(href="?clang=fr") FR
                a.black-text(href="?clang=de") DE
            div.col.s3